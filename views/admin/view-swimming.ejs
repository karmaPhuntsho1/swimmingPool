<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Swimming Activities</title>
  <link rel="stylesheet" href="/css/adminStyles.css">
  <style>
    .container {
      max-width: 1000px;
      margin: 2rem auto;
      padding: 1rem;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      margin-bottom: 2rem;
      color: #023e8a;
    }

    .activities-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }

    .activities-table th,
    .activities-table td {
      padding: 0.75rem 1rem;
      text-align: left;
      border-bottom: 1px solid #ccc;
    }

    .activities-table thead {
      background-color: #0077b6;
      color: white;
    }

    .activities-table tbody tr:nth-child(even) {
      background-color: #f1f5f9;
    }

    .btn {
      padding: 0.4rem 0.8rem;
      border: none;
      border-radius: 4px;
      color: white;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      font-size: 0.9rem;
      margin: 0 2px;
    }

    .edit-btn {
      background-color: #0077b6;
    }

    .edit-btn:hover {
      background-color: #023e8a;
    }

    .delete-btn {
      background-color: #c62828;
    }

    .delete-btn:hover {
      background-color: #8e0000;
    }
  </style>
</head>
<body>
   <nav class="navbar">
    <div class="nav-brand">
      <img src="/img/logo.jpg" alt="Logo" style="height:40px; width:auto; vertical-align:middle; border-radius:8px; margin-right:8px;" />
      Swimminng Pool
    </div>
    <ul class="nav-links">
      <li><a href="/admin/dashboard">Dashboard</a></li>
      <li><a href="/admin/view-swimming">View Activities</a></li>
      <li><a href="/admin/pool-bookings" class="active">Pool Bookings</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>

  <main class="container">
    <h1>Swimming Activities</h1>

    <% if (activities.length > 0) { %>
      <table class="activities-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Coach</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% activities.forEach(activity => { %>
            <tr>
              <td><%= activity.name %></td>
              <td><%= activity.coach %></td>
              <td>Nu. <%= activity.price %></td>
              <td>
                <a href="/admin/edit-activity/<%= activity.id %>" class="btn edit-btn">Edit</a>
                <form action="/admin/delete-activity/<%= activity.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn delete-btn" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
    <% } %>
  </main>
</body>
</html>